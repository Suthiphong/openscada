<OpenScada>
  <!--
  This is the OpenScada configuration file. 
  -->
  <station id="server1">
  <!--
  Discribe internal parameter for station "server1".
  Station this only OpenScada programm.
  -->
    <prm id="cr_file_perm">0664</prm>
    <prm id="cr_dir_perm">0775</prm>
    
    <prm i="io_charset">UTF8</prm>
    <prm id="debug">8</prm>    
    <prm id="target_log">2</prm>
    <prm id="mess_buf">100</prm>
    
    <kernel id="kernel1">
    <!--
    Discribe internal parameter for kernel "kernel1". 
    Kernel this OpenScada kernel tree into OpenScada programm.
    OpenScada support multikernel.
     section - parameters internal section of OpenScada kernel
     module  - parameters external modules
    -->
	<prm id="mod_path">./MODULES</prm>
	<prm id="mod_auto">*</prm>
	<prm id="DefaultBD">direct_dbf:./DATA</prm>
	
	<section id="Sequrity">
	    <prm id="GenBD">::sequrity.dbf</prm>
	</section>    

	<section id="BaseDate">
    	    <module id="direct_dbf">
    	    </module>    	
	</section>    
	
	<section id="Transport">
	    <prm id="GenBD">::transport.dbf</prm>
	    <IN id="web" type="socket" addr="TCP::10002:0" prot="http">Work web transport for proced http requests.</IN>
	    <IN id="tcp1" type="socket" addr="TCP::10001:1" prot="self">Test TCP input socket!</IN>
	    <IN id="UDP1" type="socket" addr="UDP::10001" prot="self">Test UDP input socket!</IN>
	    <IN id="UNIX1" type="socket" addr="UNIX:./oscada:1" prot="self">Test UNIX input socket!</IN>
	    <OUT id="TCP2" type="socket" addr="TCP:127.0.0.1:10001" prot="self">Test TCP output socket!</OUT>
	    <OUT id="UDP2" type="socket" addr="UDP:127.0.0.1:10001" prot="self">Test UDP output socket!</OUT>
	    <OUT id="UNIX2" type="socket" addr="UNIX:./oscada" prot="self">Test UNIX output socket!</OUT>
    	    <module id="socket">
    		<prm id="max_sock_queue">15</prm>	    
    		<prm id="max_fork">5</prm>	    
    		<prm id="buf_len">1</prm>	    
    	    </module>    			
	</section>    
	
	<section id="Controller">
	    <prm id="mod_path"></prm>
	    <prm id="GenBD">::generic.dbf</prm>
	    
	    <CONTR id="test3" type="virtual_v1" bd="::virt_c.dbf">Test contoller!</CONTR>
	
    	    <module id="virtual_v1">
    		<prm id="config">./CFG/alg.cfg</prm>
    	    </module>    
	</section>    
	
	<section id="Arhiv">
	    <prm id="GenBD">::arhive.dbf</prm>
	    <prm id="mess_period">5</prm>
	    
    	    <module id="base_arh">
    		<prm id="mess_charset">UTF8</prm>	    
    		<prm id="mess_max_size">2000</prm>	    
    		<prm id="mess_numb_file">10</prm>	    
    		<prm id="mess_time_size">1</prm>	    
		<prm id="mess_timeout_free">5</prm>
    	    </module>    				    
	</section>    
	
	<section id="Protocol">
	</section>    
	
	<section id="UI">
	</section>    
	
	<section id="Special">
    	    <module id="test_kernel">
    		<XML on="0" period="0" file="./3FC4B8E7.xml"/>	    
    		<MESS on="1" period="0" arh="sys1" t_arh="base_arh" categ=""/>
    		<PARAM on="0" period="10" name="TEST_VirtualC"/>	    
    		<SOAttDet on="0" period="30" name="./MODULES/arh_base.so" full="1"/>	    
    		<Controll on="0" period="0"/>	    
    	    </module>    			
	</section>    
    </kernel>

    <!--
    <kernel id="kernel2">
    Discribe internal parameter for kernel "kernel2". 
    Kernel this OpenScada kernel tree into OpenScada programm.
    OpenScada support multikernel.
    </kernel>
    -->
  
  </station>

</OpenScada>

